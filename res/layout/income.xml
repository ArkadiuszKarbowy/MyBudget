<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <!-- TITLE -->

        <TextView
            android:id="@+id/i_title_headline"
            style="@style/Headline"
            android:text="@string/title" />

        <View
            android:id="@+id/i_title_underline"
            style="@style/Underline"
            android:layout_below="@+id/i_title_headline" />

        <EditText
            android:id="@+id/income_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/i_title_underline"
            android:layout_marginTop="5dip"
            android:inputType="textCapSentences"
            android:hint="@string/title" />

        <!-- AMOUNT -->

        <TextView
            android:id="@+id/i_amount_headline"
            style="@style/Headline"
            android:layout_below="@+id/income_title"
            android:text="@string/amount" />

        <View
            android:id="@+id/i_amount_underline"
            style="@style/Underline"
            android:layout_below="@+id/i_amount_headline" />

        <EditText
            android:id="@+id/income_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/i_amount_underline"
            android:layout_marginTop="5dip"
            android:inputType="numberDecimal|numberSigned"
            android:hint="@string/amount" />
    </RelativeLayout>

</ScrollView>